    <LinearLayout
        android:id="@+id/switchREl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_switch_btn_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/sekizbit_selector_btn_left"
            android:text=" السجيل"
            android:bottomLeftRadius="10dp" android:topLeftRadius="10dp"

            android:textColor="@drawable/sekizbit_selector_btn_text_color"
            android:textSize="15dp" />

        <Button
            android:id="@+id/_switch_btn_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/sekizbit_selector_btn_right"
            android:text="الطلباتي "
            android:textColor="@drawable/sekizbit_selector_btn_text_color"
            android:textSize="15dp"

            android:bottomLeftRadius="10dp" android:topLeftRadius="10dp"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="409dp"
        android:layout_height="654dp"
        android:layout_below="@+id/switchREl"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="6dp"
        android:background="#FDFDFD"
        tools:context=".MainActivity" />

</RelativeLayout>