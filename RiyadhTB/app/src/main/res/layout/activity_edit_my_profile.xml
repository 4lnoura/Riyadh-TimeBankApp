<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".UserProfile.EditMyProfile">

    <ImageView
        android:id="@+id/image_up"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/user3" />


    -

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fdfdfd"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الاسم "
            android:inputType="textPersonName"
            android:text="الاسم"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="128dp" />

        <EditText
            android:id="@+id/skill_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="المهارات"
            android:inputType="textPersonName"
            android:text="مهارات"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/interest_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الاهتمامات"
            android:inputType="textPersonName"
            android:text="إهتمامات"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="128dp" />

        <EditText
            android:id="@+id/experience_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الخبرات"
            android:inputType="textPersonName"
            android:text="خبرات"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="218dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDate_EditDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginRight="30dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_today" />

        <TextView
            android:id="@+id/tvDate_EditDOB"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:text="اليوم / الشهر / السنة"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ الميلاد"
            android:textSize="18sp" />


    </LinearLayout>

    -

    <LinearLayout
        android:id="@+id/saveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/Save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:gravity="center"
            android:text="حفظ"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="339dp" />

    </LinearLayout>

</LinearLayout>